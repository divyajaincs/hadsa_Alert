<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comp.jain.divya.hadsaalert.description"
    android:background="@drawable/a7">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pot holes"
        android:id="@+id/button11"
        android:textSize="54px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U-turn"
        android:id="@+id/button12"
        android:textSize="54px"
        android:layout_below="@+id/button11"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Divider"
        android:id="@+id/button13"
        android:textSize="54px"
        android:layout_below="@+id/button12"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button14"
        android:layout_below="@+id/button13"
        android:layout_centerHorizontal="true"
        android:textSize="54px"
        android:text="no signal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="animal attacks"
        android:id="@+id/button15"
        android:textSize="45px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Others"
        android:id="@+id/button17"
        android:textSize="54px"
        android:layout_below="@+id/button15"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/button16"
        android:textSize="50px"
        android:layout_marginBottom="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button17"
        android:onClick="next2"/>

</RelativeLayout>
